extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main 
  .inner-main 
   .container 
    .row
      .col-12 
        +box-head('Danh sách sản phẩm')
   
    .row
      each product in products
        .col-3 
          .product-item
            .inner-image
              img(src=product.thumbnail, alt=product.title)
            .inner-content
              h4.inner-title #{product.title}
              .inner-price-new #{product.price} VND
              .inner-price-old #{product.price} VND
              .inner-discount #{product.discountPercentage}